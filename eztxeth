pragma solidity ^0.8.20;

// Menggunakan standar OpenZeppelin yang aman dan teruji
import "@openzeppelin/contracts/token/ERC20/ERC20.md";

contract NamaTokenKamu is ERC20 {
    /**
     * @dev Constructor yang akan dijalankan saat deploy.
     * Mengatur nama token, simbol, dan jumlah pasokan awal.
     */
    constructor() ERC20("Eztxeth", "Ezt") {
        // Mencetak 1.000.000 token untuk pembuat kontrak
        // 18 adalah jumlah desimal standar untuk token Ethereum
        _mint(msg.sender, 1000000 * 10 ** decimals());
    }
}
